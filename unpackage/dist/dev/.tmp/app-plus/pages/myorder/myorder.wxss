}
.goods-status{
	font-size: 38rpx;
}
.goods-status>text{
	font-size: 30rpx;
	color: #DD524D;
	margin-right: 15rpx;
}
.goods-item{
	width: 710rpx;
	background: #FFFFFF;
	border-radius: 20rpx;
	padding: 20rpx;
}
.scroll-view_H {
	white-space: nowrap;
	width: 100%;
	-webkit-scrollbar:none;
}
.scroll-view-item {
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 24rpx;
}
.scroll-view-item_H {
	display: inline-block;
	width: 150rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 28rpx;
}
.actived-type{
	color: #F0AD4E;
}
